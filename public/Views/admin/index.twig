{% extends "admin/base.twig" %}

{% block title %}Admin{% endblock %}

{% block content %}

        <div class="justify-content-center">
            <div class="flextable">
                <div class="flex_row">
                    <div class="flex_field">id</div>
                    <div class="flex_field">username</div>
                    <div class="flex_field">email</div>
                    <div class="flex_field">superuser</div>
                    <div class="flex_field">staff</div>
                    <div class="flex_field">active</div>
                </div>

                {% for user in users %}
                    <a href="/admin/user?id={{ user.id }}">
                        <div class="flex_row ">
                            <div class="flex_field">{{ user.id }}</div>
                            <div class="flex_field">{{ user.username }}</div>
                            <div class="flex_field">{{ user.email }}</div>
                            <div class="flex_field">{{ user.is_superuser }}</div>
                            <div class="flex_field">{{ user.is_staff }}</div>
                            <div class="flex_field">{{ user.is_active }}</div>
                        </div>
                    </a>
                {% else %}
                    There no any user in db (impossible if you're here)
                {% endfor %}

            </div>
        </div>

{% endblock %}
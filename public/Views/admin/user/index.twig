{% extends "admin/base.twig" %}

{% block title %}Admin-users{% endblock %}

{% block content %}
        <form style="width: 400px; margin-left: auto; margin-right: auto" action="/admin/user/update?id={{ user.id }}" method ="post">
            <div class="form-group mb-3">
                <label for="Username">Username</label>
                <input type="text" class="form-control" id="Username" placeholder="username" name="username" value="{{ user.username }}">
            </div>

            <div class="form-group mb-3">
                <label for="InputEmail">Email address</label>
                <input type="email" class="form-control" id="InputEmail" name="email" aria-describedby="emailHelp" placeholder="Enter email" value="{{ user.email }}">
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_active" name="is_active"
                {% if user.is_active == true %} checked {% endif %}>
                <label class="form-check-label" for="is_active">Active user permission</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_staff" name="is_staff"
                        {% if user.is_staff == true %} checked {% endif %}>
                <label class="form-check-label" for="is_staff">Staff user permission</label>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="is_superuser" name="is_superuser"
                        {% if user.is_superuser == true %} checked {% endif %}>
                <label class="form-check-label" for="is_superuser">Superuser user permission</label>
            </div>

            <button type="submit" class="btn btn-primary">Update user!</button>
        </form>
{% endblock %}

{% extends "base.twig" %}

{% block title %}Log-out{% endblock %}

{% block content %}
    <div class="container-fluid mt-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="mb-3">
                        <div class="section-title mb-0">
                            <h4 class="m-0 text-uppercase font-weight-bold">Sign up</h4>
                        </div>
                        <div class="bg-white border border-top-0 p-4">
                            <form action="/sign-up" method ="post" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="username" >Username *</label>
                                            <input placeholder="Username *" name="username" type="text" class="form-control" id="username">
                                        </div>
                                        <span class="invalidFeedback">
                                             {{ errors.usernameError }}
                                            </span>

                                        <div class="form-group">
                                        <label for="email" >Email *</label>
                                        <input placeholder="Email *" name="email" type="email" class="form-control" id="email">
                                    </div>
                                    <span class="invalidFeedback">
                                             {{ errors.usernameError }}
                                            </span>

                                        <div class="form-group">
                                            <label for="password" >Password *</label>
                                            <input type="password" placeholder="Password *" name="password" class="form-control" id="password">
                                        </div>
                                        <span class="invalidFeedback">
                                      {{ errors.passwordError }}
                                </span>

                                        <div class="form-group">
                                            <label for="confirmPassword" >Confirm password *</label>
                                            <input type="password" placeholder="Password *" name="confirmPassword" class="form-control" id="confirmPassword">
                                        </div>
                                        <span class="invalidFeedback">
                                      {{ errors.confirmPasswordError }}
                                </span>
                                    </div>
                                </div>

                                <div class="form-group mb-0">
                                    <input type="submit" value="Submit!"
                                           class="btn btn-primary font-weight-semi-bold py-2 px-3">
                                </div>
                                <p class="options">Already have an account? <a href="/log-in">Log in!</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
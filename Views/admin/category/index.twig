{% extends "admin/base.twig" %}

{% block title %}Admin{% endblock %}

{% block content %}
    <div class="mt-5 text-center">
        <h1>Category management page</h1>
    </div>
    <div class="d-flex justify-content-center container mt-5">
        <div class="w-100">
            <a class="btn btn-primary col-2 mb-4 ms-auto" href="/admin/category/add" role="button">Add new category</a>

            <div class="justify-content-center">
                <div class="flextable">
                    <div class="flex_row">
                        <div class="flex_field">id</div>
                        <div class="flex_field">name</div>
                        <div class="flex_field">slug</div>
                        <div class="flex_field">description</div>
                    </div>

                    {% for category in categories %}
                        <a href="/admin/category/update?id={{ category.id }}">

                            <div class="flex_row">
                                <div class="flex_field">{{ category.id }}</div>
                                <div class="flex_field">{{ category.name }}</div>
                                <div class="flex_field">{{ category.slug }}</div>
                                <div class="flex_field">{{ category.description|length > 50 ? category.description|slice(0, 50) ~ '...' : category.description }}</div>
                            </div>
                        </a>

                    {% else %}
                        There are no any category in db
                    {% endfor %}
                </div>
            </div>
        </div>


    </div>
{% endblock %}
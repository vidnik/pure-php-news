<div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-2 py-lg-0 px-lg-5">
                <a href="/" class="navbar-brand d-block d-lg-none">
                        <h1 class="m-0 display-4 text-uppercase text-primary">News<span class="text-white font-weight-normal">website</span></h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between px-0 px-lg-3" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                                <a href="/" class="nav-item nav-link active">Home</a>
                                <a href="/about" class="nav-item nav-link">About us</a>
                                <div class="nav-item dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Categories</a>
                                        <div class="dropdown-menu rounded-0 m-0">
                                                {% for category in categories %}
                                                <a href="/category?name={{ category.slug }}" class="dropdown-item">{{ category.name }}</a>
                                                {% endfor %}
                                        </div>
                                </div>
                                <a href="/recent" class="nav-item nav-link">Recent news</a>

                        </div>
                        <form action="/search" method ="post" enctype="multipart/form-data">

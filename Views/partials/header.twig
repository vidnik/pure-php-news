                <div class="col-lg-9">
                        <nav class="navbar navbar-expand-sm bg-dark p-0">
                                <ul class="navbar-nav ml-n2">
                                        {% if not session %}
                                        <li class="nav-item">
                                                <a class="nav-link text-body small" href="/log-in">Log in</a>
                                        </li>
                                        <li class="nav-item">
                                                <a class="nav-link text-body small" href="/sign-up">Sign up</a>
                                        </li>
                                        {% else %}
                                        <li class="nav-item">
                                                <span class="nav-link text-body small">{{ session["username"] }}</span>
                                        </li>
                                        <li class="nav-item">
                                                <a class="nav-link text-body small" href="/log-out">Log out</a>
                                        </li>
